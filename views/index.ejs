                                                                                        <td class="center">
                                                                                                <label class="pos-rel">
                                                                                                        <input type="checkbox" class="ace" />
                                                                                                        <span class="lbl"></span>
                                                                                                </label>
                                                                                        </td>
                                                                                        <td>
                                                                                                <a href="/detail/<%= note._id %>"><%= note.title %></a>
                                                                                        </td>
                                                                                        <td><%= note.tag %></td>
                                                                                        <td><%= note.createTime %></td>
                                                                                </tr>
                                                                                <% }); %>
